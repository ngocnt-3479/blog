<%= form_with model: @post, data: {"turbo-method": post}  do |form| %>
  <%= render "shared/error_messages", object: form.object %>
  <div class="field">
    <%= form.text_area :content %>
  </div>
  <span class="image">
    <%= form.file_field :image, accept: Settings.img.valid %>
  </span>
  <%= form.submit "Post", class: "btn btn-primary" %>
<% end %>
