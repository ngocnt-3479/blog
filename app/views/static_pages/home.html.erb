
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-3">
      <h3>Create Post</h3>
      <section class="micropost_form">
        <%= render "posts/form", post: @post, id_name: :new_post_form %>
      </section>
    </aside>
    <h3>New Feed</h3>
    <div class="col-md-8" id="new_feed">
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Mini Blog</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
